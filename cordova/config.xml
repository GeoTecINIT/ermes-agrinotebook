<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ermesfp7.esa" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ErmesSmartApp</name>
    <description>
        ErmesSmartApp for on field data report
    </description>
    <author email="dev@cordova.apache.org" href="ermes.dlsi.uji.es">
        GEOTEC Research Group
    </author>
    <icon src="specific-resources/logo.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidPersistentFileLocation" value="Internal" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
  <preference name="StatusBarBackgroundColor" value="#8cc63f" />
</widget>
