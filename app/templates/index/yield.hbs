{{#ermes-panel id=panelId title=(t 'fields.text.yield')}}
  <form>
    <label>
        <span>{{t "panel.yield.date"}}</span>
      {{jqm-datepicker}}
    </label>
    <label>
        <span>{{t "panel.yield.yield"}}</span>
      {{jqm-textinput type="number" step=0.01 placeholder=(t "panel.yield.yield-unit")}}
    </label>
    <label>
        <span>{{t "panel.yield.comments"}}</span>
      {{jqm-textarea}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") action=(action "submit" on="submit") theme="b"}}
  </form>
{{/ermes-panel}}