{{#ermes-panel id=panelId title=(t 'fields.text.abiotic-stresses')}}
  <form {{action "submit" on="submit"}}>
    <label>
        <span>{{t "panel.abiotic-stresses.date"}}</span>
      {{ermes-datepicker value=model.observationDate}}
    </label>
    {{ermes-message text=dateError color="red" animation="fadeInDown"}}
      <label>
          <span>{{t "panel.abiotic-stresses.cause"}}</span>
        {{jqm-select value=model.cause theme="d" options=causes}}
      </label>
      <label>
          <span>{{t "panel.abiotic-stresses.comment"}}</span>
        {{jqm-textarea value=model.comments}}
      </label>
      <label>
          <span>{{t "panel.abiotic-stresses.picture"}}</span>
        {{jqm-fileinput files=files accept="image/*;capture=camera"}}
      </label>
      <label>
          <span>{{t "panel.abiotic-stresses.damage"}}</span>
        {{jqm-slider value=model.damage min=1 max=10 theme="d"}}
      </label>
    {{jqm-button text=(t "fields.text.add-new") theme="b"}}
    {{ermes-message text=parcelError color="red" animation="fadeInDown"}}
    {{ermes-message text=info color="blue" animation="fadeInDown"}}
  </form>
{{/ermes-panel}}