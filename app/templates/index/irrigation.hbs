{{#ermes-panel id=panelId title=(t 'fields.text.irrigation')}}
  <form>
    <label>
        <span>{{t "panel.irrigation.start-date"}}</span>
      {{jqm-datepicker}}
    </label>
    <label>
        <span>{{t "panel.irrigation.end-date"}}</span>
      {{jqm-datepicker}}
    </label>
    <label>
        <span>{{t "panel.irrigation.measure"}}</span>
      {{jqm-select theme="d"}}
    </label>
    <label>
        <span>{{t "panel.irrigation.quantity"}}</span>
      {{jqm-textinput type="number" step=0.01 placeholder=(t "panel.irrigation.quantity-unit-mm")}}
    </label>
    <label>
        <span>{{t "panel.irrigation.depth"}}</span>
      {{jqm-slider min=0 max=100}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") action=(action "submit" on="submit") theme="b"}}
  </form>
{{/ermes-panel}}