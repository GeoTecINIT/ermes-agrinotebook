{{#ermes-panel id=panelId title=(t 'fields.text.weeds')}}
  <form {{action "submit" on="submit"}}>
    <label>
      <span>{{t "panel.weeds.date"}}</span>
      {{ermes-datepicker value=model.product.observationDate}}
    </label>
    {{ermes-message text=dateError color="red" animation="fadeInDown"}}
    <label>
      <span>{{t "panel.weeds.name"}}</span>
      {{jqm-select value=model.product.name theme="d" options=names}}
    </label>
    {{#if isOther}}
      {{jqm-textinput value=model.newOption placeholder=(t "fields.text.other") required=true}}
    {{/if}}
    <label>
      <span>{{t "panel.weeds.comment"}}</span>
      {{jqm-textarea value=model.product.comments}}
    </label>
    <label>
      <span>{{t "panel.weeds.picture"}}</span>
      {{jqm-fileinput files=files accept="image/*;capture=camera"}}
    </label>
    <label>
      <span>{{t "panel.weeds.damage"}}</span>
      {{jqm-slider value=model.product.percentCovered min=1 max=100 theme="d"}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") theme="b"}}
    {{ermes-message text=parcelError color="red" animation="fadeInDown"}}
    {{ermes-message text=info color="blue" animation="fadeInDown"}}
  </form>
{{/ermes-panel}}