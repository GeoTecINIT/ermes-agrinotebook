{{#ermes-panel id=panelId title=(t 'fields.text.weeds')}}
    <form>
        <label>
            <span>{{t "panel.weeds.date"}}</span>
          {{jqm-datepicker}}
        </label>
        <label>
            <span>{{t "panel.weeds.name"}}</span>
          {{jqm-select theme="d" options=names}}
        </label>
        <label>
            <span>{{t "panel.weeds.comment"}}</span>
          {{jqm-textarea}}
        </label>
        <label>
            <span>{{t "panel.weeds.picture"}}</span>
          {{jqm-textinput type="file" accept="image/*;capture=camera"}}
        </label>
        <label>
            <span>{{t "panel.weeds.damage"}}</span>
          {{jqm-slider min=1 max=100 theme="d"}}
        </label>
      {{jqm-button text=(t "fields.text.add-new") action=(action "submit" on="submit") theme="b"}}
    </form>
{{/ermes-panel}}