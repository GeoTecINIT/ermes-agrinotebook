{{#ermes-panel id=panelId title=(t 'fields.text.soil-type')}}
  <form {{action "submit" on="submit"}}>
    <label>
        <span>{{t "panel.soil-type.texture"}}</span>
      {{jqm-select value=model.soilTexture theme="d" options=soilTextures}}
    </label>
    <label>
        <span>{{t "panel.soil-type.organic-matter"}}</span>
      {{jqm-textinput value=model.organicMatter type="number" step=0.01 min=0 max=100 placeholder=(t "panel.soil-type.organic-matter-unit") required=true}}
    </label>
    <label>
        <span>{{t "panel.soil-type.ph"}}</span>
      {{jqm-slider value=model.ph  min=0 max=14 theme="d"}}
    </label>
    <label>
        <span>{{t "panel.soil-type.date"}}</span>
      {{jqm-datepicker value=model.date}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") theme="b"}}
  </form>
{{/ermes-panel}}