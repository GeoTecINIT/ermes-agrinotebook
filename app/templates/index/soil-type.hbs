{{#ermes-panel id=panelId title=(t 'fields.text.soil-type')}}
  <form>
    <label>
        <span>{{t "panel.soil-type.texture"}}</span>
      {{jqm-select theme="d" options=soilTextures}}
    </label>
    <label>
        <span>{{t "panel.soil-type.organic-matter"}}</span>
      {{jqm-textinput type="number" step=0.01 placeholder=(t "panel.soil-type.organic-matter-unit")}}
    </label>
    <label>
        <span>{{t "panel.soil-type.ph"}}</span>
      {{jqm-slider min=0 max=14}}
    </label>
    <label>
        <span>{{t "panel.soil-type.date"}}</span>
      {{jqm-datepicker}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") action=(action "submit" on="submit") theme="b"}}
  </form>
{{/ermes-panel}}