{{#ermes-panel id=panelId title=(t 'fields.text.pathogens')}}
  <form {{action "submit" on="submit"}}>
    <label>
      <span>{{t "panel.pathogens.date"}}</span>
      {{jqm-datepicker value=model.date}}
    </label>
    {{ermes-message text=dateError color="red" animation="fadeInDown"}}
    <label>
      <span>{{t "panel.pathogens.name"}}</span>
      {{jqm-select value=model.name theme="d" options=names}}
    </label>
    <label>
      <span>{{t "panel.pathogens.comment"}}</span>
      {{jqm-textarea value=model.comments}}
    </label>
    <label>
      <span>{{t "panel.pathogens.picture"}}</span>
      {{jqm-fileinput accept="image/*;capture=camera"}}
    </label>
    <label>
      <span>{{t "panel.pathogens.damage"}}</span>
      {{jqm-slider value=model.damage min=1 max=10 theme="d"}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") theme="b"}}
  </form>
{{/ermes-panel}}