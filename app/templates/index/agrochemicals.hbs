{{#ermes-panel id=panelId title=(t "fields.ui-special.agrochemicals")}}
  <form>
    <label>
      <span>{{t "panel.agrochemicals.date"}}</span>
      {{jqm-datepicker}}
    </label>
    <label>
      <span>{{t "panel.agrochemicals.product"}}</span>
      {{jqm-select theme="d" options=products}}
    </label>
    <label>
      <span>{{t "panel.agrochemicals.quantity"}}</span>
      {{jqm-textinput type="number" step=0.01 placeholder=(t "panel.agrochemicals.quantity-unit")}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") action=(action "submit" on="submit") theme="b"}}
  </form>
{{/ermes-panel}}