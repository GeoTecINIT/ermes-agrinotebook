{{#ermes-panel id=panelId title=(t 'fields.text.crop-info')}}
  <form>
    <label>
      <span>{{t "panel.crop-info.crop-type"}}</span>
      {{jqm-select theme="d" options=cropTypes}}
    </label>
    <label>
      <span>{{t "panel.crop-info.rice-variety"}}</span>
      {{jqm-select theme="d" options=riceVarieties}}
    </label>
    <label>
        <span>{{t "panel.crop-info.pudding"}}</span>
      {{jqm-select theme="d" options=puddings}}
    </label>
    <label>
        <span>{{t "panel.crop-info.sowing-practice"}}</span>
      {{jqm-select theme="d" options=sowingPractices}}
    </label>
    <label>
      <span>{{t "panel.crop-info.date"}}</span>
      {{jqm-datepicker}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") action=(action "submit" on="submit") theme="b"}}
  </form>
{{/ermes-panel}}