{{#ermes-panel id=panelId title=(t 'fields.text.soil-condition')}}
  <form {{action "submit" on="submit"}}>
    <label>
      <span>{{t "panel.soil-condition.status"}}</span>
      {{jqm-select value=model.parcelStatus theme="d" options=parcelStatus}}
    </label>
    <label>
      <span>{{t "panel.soil-condition.date"}}</span>
      {{ermes-datepicker value=model.date showToday=true}}
    </label>
    {{jqm-button text=(t "fields.text.add-new") theme="b"}}
    {{ermes-message text=parcelError color="red" animation="fadeInDown"}}
    {{ermes-message text=info color="blue" animation="fadeInDown"}}
  </form>
{{/ermes-panel}}